{% extends "layout.html.twig" %}
    {% block title %}Events - SmartAI - {{ parent() }}{% endblock %}
    {% block head %}
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/css/jquery.dataTables.css" />
        <script src="{{ app.request.basepath }}/js/jquery.dataTables.min.js"></script>
    {% endblock %}
    {% block content %}
        <div class="fluid-container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td><strong>Value</strong></td>
                        <td><strong>Event</strong></td>
                        <td><strong>Param1</strong></td>
                        <td><strong>Param2</strong></td>
                        <td><strong>Param3</strong></td>
                        <td><strong>Param4</strong></td>
                        <td><strong>Comment</strong></td>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.name }}</td>
                        <td>{{ event.param1 }}</td>
                        <td>{{ event.param2 }}</td>
                        <td>{{ event.param3 }}</td>
                        <td>{{ event.param4 }}</td>
                        <td>{{ event.comment }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endblock %}
    {% block script %}
        <script type="text/javascript">
            $(document).ready(function() {
                $('.table').dataTable( {
                    "scrollY":        "calc(100vh - 72px)",
                    "scrollCollapse": false,
                    "paging":         false,
                    "order": [[ 0, "asc" ]]
                } );
            } );
        </script>
    {% endblock %}
