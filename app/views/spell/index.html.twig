            <h4>Find the spell by name</h4>
            <form class="form-inline">
                <div class="form-group">
                    <label for="exampleInputName2">Name</label>
                    <input type="text" class="form-control" id="find-name">
                </div>
            </form>
            <div class="col-md-6 row">
                <table class="table table-stripped">
                    <thead>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Rank</th>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    {% endblock %}
    {% block script %}
        <script type="text/javascript">
            $(document).keypress(function(e) {
                if(e.which == 13) {
                    e.preventDefault();
                    if($('#find-name').is(":focus"))
                        $('#find-name').trigger('change');
                    if($('#find-entry').is(":focus"))
                        window.location = ('{{ app.request.basepath }}/creature/entry/'+$('#find-entry').val());
                }
            });
            $('#find-name').change(function(){
                $.ajax({
                    type: "GET",
                    url: '{{ app.request.basepath }}/spell/'+$(this).val()+'/search',
                    success: function (data) {
                        $('.table > tbody').html('');
                        var html = '';
                        $.each(JSON.parse(data), function(){
                            html += '<tr><td><a href="http://wowhead.com/spell='+this.entry+'" target="_blank">'+this.entry+'</a></td><td>'+this.spellName1+'</td><td>'+this.rank3+'</td></tr>';
                        });
                        $('.table > tbody').append(html);
                    },
                    error: function (xhr, err) {
                        console.log("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
                        console.log(xhr.responseText);
                    }
                });
            });
        </script>
    {% endblock %}